{% extends 'base.html.twig' %}

{% block body %}
<style>
    h1 {
        text-align: center;
        color: #34495e;
        margin-bottom: 40px;
        font-size: 36px;
        font-weight: 700;
        font-family: 'Arial', sans-serif;
    }

    a {
        display: inline-block;
        margin: 20px auto;
        padding: 12px 24px;
        background-color: #8e44ad;
        color: #fff;
        text-decoration: none;
        border-radius: 8px;
        transition: background-color 0.3s, transform 0.2s;
        text-align: center;
        font-size: 16px;
        font-weight: 500;
    }

    a:hover {
        background-color: #9b59b6;
        transform: scale(1.05);
    }

    table {
        width: 85%;
        margin: 30px auto;
        border-collapse: collapse;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        background-color: #f8f9fa;
        border-radius: 12px;
        overflow: hidden;
    }

    th, td {
        padding: 20px;
        text-align: center;
        border-bottom: 2px solid #ddd;
        font-size: 18px;
        font-family: 'Arial', sans-serif;
    }

    th {
        background-color: #3498db;
        color: white;
        font-weight: bold;
        text-transform: uppercase;
    }

    tr:nth-child(even) {
        background-color: #ecf0f1;
    }

    tr:hover {
        background-color: #dfe6e9;
    }

    td {
        color: #2c3e50;
    }

    .btn {
        padding: 8px 16px;
        border-color: white;
        border-radius: 4px;
        font-size: 14px;
        margin: 5px;
        text-decoration: none;
        transition: background-color 0.3s, transform 0.2s;
    }

    .btn-details {
        background-color: #2ecc71;
        color: white;
    }

    .btn-details:hover {
        background-color: #27ae60;
        transform: scale(1.05);
        cursor: pointer;
    }

    .btn-supprimer {
        background: linear-gradient(145deg, #e74c3c, #c0392b);
        color: white;
        cursor: pointer;
        padding: 10px 20px; 
        font-size: 16px; 
        font-weight: 600; 
        border: none; 
        border-radius: 8px; 
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.2);
        transition: background 0.3s, transform 0.2s, box-shadow 0.2s; 
        display: inline;
    }

    .btn-supprimer:hover {
        background: linear-gradient(145deg, #c0392b, #e74c3c);
        transform: scale(1.1); 
        box-shadow: 0 6px 8px rgba(0, 0, 0, 0.3); 
    }

    
    .book-details {
        width: 85%;
        margin: 20px auto;
        background-color: #f8f9fa;
        padding: 20px;
        border-radius: 12px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        display:none; 
    }

    .btn-back {
        padding: 12px 24px;
        background-color: #8e44ad;
        color: #fff;
        text-decoration: none;
        border-radius: 8px;
        transition: background-color 0.3s;
        text-align: center;
    }

    .btn-back:hover {
        background-color: #9b59b6;
    }
    .desc{
        background-color:gold;
    }
</style>

<h1>Liste des Livres</h1>
<a href="{{ path('app_livre_ajouter') }}">Ajouter un livre</a>

<table>
    <thead>
        <tr>
            <th>Titre</th>
            <th>Auteur</th>
            <th>Date de Publication</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        {% for livre in livres %}
            <tr>
                <td>{{ livre.Titre }}</td>
                <td>{{ livre.Auteur }}</td>
                <td>{{ livre.getDateDePublication|date('d-m-y') }}</td>
                <td>
                    <button type="button" class="btn btn-details" onclick="toggleDetails('{{ livre.id }}')">
                        DÃ©tails
                    </button>

                    <form action="{{ path('app_livre_supprimer', {'id': livre.id}) }}" method="post" onclick='return confirm("Are u sure about deleting this book ? ")' >
                        <button type="submit" class="btn btn-supprimer" >
                            Supprimer
                        </button>
                    </form>
                    
                    <a href="{{ path('app_livres_description', {'id': livre.id}) }}" class="desc">description</a>

                </td>
            </tr>

            <tr id="details-box-{{ livre.id }}" class="book-details">
                <td colspan="4">
                    <p><strong>Titre:</strong> {{ livre.Titre }}</p>
                    <p><strong>Auteur:</strong> {{ livre.Auteur }}</p>
                    <p><strong>Date de Publication:</strong> {{ livre.getDateDePublication|date('d-m-Y') }}</p>
                    
                </td>
            </tr>
        {% endfor %}
    </tbody>
</table>

<script>
    function toggleDetails(livreId) {
        var detailsBox = document.getElementById('details-box-' + livreId);
        if (detailsBox.style.display === "none" || detailsBox.style.display === "") {
            detailsBox.style.display = "table-row"; 
        } else {
            detailsBox.style.display = "none"; 
        }
    }
</script>

{% endblock %}
