{% extends 'base.html.twig' %}

{% block body %}
<style>
    body {
        font-family: 'Arial', sans-serif;
        background-color: #f9f9f9;
        margin: 0;
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 100vh;
        padding: 20px;
    }

    .description-container {
        background-color: #ffffff;
        padding: 40px;
        border-radius: 12px;
        box-shadow: 0 20px 40px rgba(0, 0, 0, 0.08);
        max-width: 800px;
        width: 100%;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

    .description-container:hover {
        transform: translateY(-8px);
        box-shadow: 0 25px 50px rgba(0, 0, 0, 0.1);
    }

    h1 {
        font-size: 40px;
        color: #2c3e50;
        margin-bottom: 20px;
        font-weight: 700;
        text-align: center;
        text-transform: uppercase;
    }

    .highlight {
        font-size: 22px;
        color: #2980b9;
        font-weight: bold;
        margin: 10px 0;
    }

    .author {
        font-size: 18px;
        color: #34495e;
        margin-bottom: 12px;
    }

    .publication {
        font-style: italic;
        color: #7f8c8d;
        font-size: 16px;
        margin-bottom: 20px;
    }

    .descr {
        font-size: 20px;
        color: #2c3e50;
        margin-bottom: 10px;
        font-weight: bold;
    }

    p {
        font-size: 18px;
        color: #555;
        line-height: 1.7;
        margin-bottom: 20px;
    }

    @media (max-width: 768px) {
        body {
            padding: 20px;
        }

        .description-container {
            padding: 30px;
            box-shadow: 0 15px 30px rgba(0, 0, 0, 0.08);
        }

        h1 {
            font-size: 32px;
        }

        .highlight {
            font-size: 20px;
        }

        .descr {
            font-size: 18px;
        }

        p {
            font-size: 16px;
        }
    }
</style>

<div class="description-container">
    <h1>Description du Livre</h1>
    <p class="highlight">Titre: {{ livre.Titre }}</p>
    <p class="author">Auteur: {{ livre.auteur }}</p>
    <p class="publication">Publi√© le: {{ livre.getDateDePublication()|date('d/m/Y') }}</p>
    <div class="content">
        <p class="descr">Description:</p>
        <p>{{ livre.description }}</p>
    </div>
</div>
{% endblock %}
